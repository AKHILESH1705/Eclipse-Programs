import java.util.Scanner;
public class Pattern17 {
    
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int rows=(2*n)+1;
        int n1=((rows)/2)+1;
        int i=1;
        int a=1; 
        while(i<=n1){
            int j=1;
            int k=1;
            int x=0,y=i;
             while(j<=a){
                if(j==1 || j==a){
                    System.out.print("*");
                }else{
                     System.out.print(k);
                    if(k==y-1 || x==1){
                        k--;
                        x=1;
                    }else{
                        k++;
                    }
                }
              j++;
            }
            i++;
            a=a+2;
            System.out.println();
         }
        
        i =rows/2;
        
        while(i>=0) {
        	a = 5;
        	int j=1,k=1,x=0,y=i-1;
        	while(j<=a) {
        		if(j==1||j==a) {
        			System.out.print("*");
        		}
        		else {
        			System.out.print(k);
        			if(k==y||x==1) {
        				k--;
        			}
        			else {
        				k++;
        				x=1;
        			}
        			j=j+1;
        			
        			
        		}
        		
        	}
        	 a=a-2; 
        	 i--;
         	System.out.println();
        }
       
        
        
        
        
    }
}