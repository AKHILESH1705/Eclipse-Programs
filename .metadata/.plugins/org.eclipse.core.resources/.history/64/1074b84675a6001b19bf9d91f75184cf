
public class Check_is_array_sorted {
	
	
	public static boolean isSorted(int arr[]) {
		if(arr.length==1) {
			return true;
		}
		else if(arr[0] > arr[1]) {
			return false;
		}
		else {
			int ar[] = new int[arr.length-1];
			for(int i = 1;i<arr.length;i++) {
				ar[i-1] = arr[i];
			}
			isSorted(ar);
		}
		
		return true;
	}
	
	public static void main(String args[]) {
		int arr[]  = {1,2,3,4,5};
		System.out.println(isSorted(arr));
 	}
	

}
