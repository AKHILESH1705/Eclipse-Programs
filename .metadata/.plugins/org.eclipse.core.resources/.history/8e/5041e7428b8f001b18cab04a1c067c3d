import java.util.Scanner;
public class Pattern17 {
    
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int no_of_row=(2*n)+1;
        int h=((no_of_row)/2)+1;
        int i=1;
        int x=2,a=1;
        while(i<=no_of_row/2+1){
            int j=1;
            int k=1;
            int z=0,p=i;
        
             while(j<=a){
                if(j==1 || j==a){
                    System.out.print("*");
                }else{
                     System.out.print(k);
                    if(k==p-1 || z==1){
                        k--;
                        z=1;
                    }else{
                        k++;
                    }
                }
              j++;
            }
            i++;
            a=a+2;
            System.out.println();
         }
        
    }
}