import java.util.*;
public class Triplet_sum_with_time {
	
	
	static int findTriplets(int[] arr, int n, int sum)
	{
	
	Arrays.sort(arr);
	int count = 0;

	for (int i = 0;i < n-1; i++)
	{
	int l = i + 1;
	int r = n - 1;
	int x = arr[i];
	while (l < r)
	{
	if (x + arr[l] + arr[r] == sum)
	{
     count++;

	l++;
	r--;
	}

	else if (x + arr[l] +
	arr[r] < sum)
	l++;

	else
	r--;
	}
	}
	return count;
}

	public static void main(String args[])
	{
	int[] arr = new int[]{6, 1, 6 ,5, 3, 2, 5, 0, 5, 6, 0  };
	int sum = 5;
	int n = arr.length;
	int res = findTriplets(arr, n, sum);
	System.out.println(res);
	}
}

