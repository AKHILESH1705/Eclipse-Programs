import java.util.Scanner;
import java.util.Stack;

public class GetNodeFromTail {
	public static void PrintLinked(Node<Integer> head) {
		while(head!=null)
		{
			System.out.print(head.data+ " ");
			head = head.next;
		}
		
	}
	
	public static int getNode(Node<Integer> llist, int positionFromTail) {
	    // Write your code here
		Node<Integer> head = llist;
	      Stack<Integer> stack = new Stack();
	       while (head != null) {
	            stack.push(head.data);
	            head = head.next;
	        }
	        int count = 0;
	        while (head != null) {
	    
	            int i = stack.pop();
	            if (positionFromTail == i) {
	                return count;
	            }
	            else {
	                count++;
	            }
	            head = head.next;
	        }   
	            return count; 
	        }
	    }
	public static Node<Integer> takeInput(){
		Scanner s = new Scanner(System.in);
		int data = s.nextInt();
		Node<Integer> head = null,tail = null;
		while(data!=-1) {
			Node<Integer> newNode = new Node<Integer>(data);
			if(head==null) {
				head = newNode;
				tail = newNode;
			}
			else {
				tail.next = newNode;
				tail = tail.next; // tail = currentNode
			}
			data = s.nextInt();
			}
		return head;
	}
	
	public static void main(String args[]) {
		Scanner s = new Scanner(System.in);
		Node<Integer> head = takeInput();
	    PrintLinked(head);
	    int result = getNode(head,2);
	    System.out.println(result);
		
	}

}
